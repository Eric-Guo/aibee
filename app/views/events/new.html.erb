<div class="container">
  <div class="new-event-form form-group">
   <div class="well form-horizontal" style="max-width: 800px">


<%= simple_form_for([@hobby, @event]) do |f| %>
            <%= f.input :price, placeholder: "Price", class: "form-control", label: false %>
            <%= f.input :start_time, as: :datetime, placeholder: 'Start time', class: "form-control"%>
            <%= f.input :end_time, as: :datetime, placeholder: 'End time', class: "form-control"%>
            <%= f.input :min_pax, placeholder: 'Min pax', class: "form-control" %>
            <%= f.input :max_pax, placeholder: 'Max pax', class: "form-control" %>

          <%= f.submit class: "btn btn-primary" %>
        <% end %>
   </div>
  </div>
</div>

