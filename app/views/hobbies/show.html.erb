
<% if policy(@hobby).like? %>
  <% if @current_user && @current_user.voted_for?(@hobby) %>
    <%= link_to image_tag('dislike', {class: "hobby-show-img-like"}), hobby_like_path(@hobby) %> <span> <%= @hobby.get_likes.size %> </span>
  <% else %>
    <%= link_to image_tag('like', {class: "hobby-show-img-like"}), hobby_like_path(@hobby) %> <span> <%= @hobby.get_likes.size %> </span>
  <% end %>


  <!-- test: -->
  <% if @current_user && @current_user.voted_for?(@hobby) %>
    <%= link_to image_tag('dislike', {class: "hobby-show-img-like"}), hobby_like_path(@hobby), remote: true %> <span> <%= @hobby.get_likes.size %> </span>
  <% else %>
    <%= link_to image_tag('like', {class: "hobby-show-img-like"}), hobby_like_path(@hobby), remote: true %> <span> <%= @hobby.get_likes.size %> </span>
  <% end %>
  <!-- end of test -->
<% end %>


<div>
  <div>
    <!-- hobby description -->
    <div class="container text-center">
      <h1><%= @hobby.title%></h1>
    </div>
    <div class="container text-center">
      <h2><%= @hobby.summary %></h2>
      <h2><%= @hobby.description %></h2>
    </div class="container text-center">
    <% if @hobby.user_id == current_user.id %>
      <!-- action links if host-->
      <div class="container">
        <a class="btn btn-primary" href="<%= edit_hobby_path%>">Update this hobby</a>
        <br>
        <br>
        <a class="btn btn-primary" href="<%= new_hobby_event_path(@hobby)%>">Add an event</a>
      </div>
    <% elsif @events.present? %>
      <!-- leads to event booking compare events index only visible as guest-->
      <div class="wrapper_form text-center">
        <%= link_to("Join one of #{@hobby.user.first_name}'s events", hobby_events_path(@hobby), class: "btn btn-primary card-link") %>
      </div>
    <% end %>
  </div>
  <!-- list of events -->
  <div class="container">
    <div class="row">
      <% if @events.present? %>
      <div class="container text-center padded">
          <% @events.each do |event| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
              <div class="card-description">
                <h2><%= event.price %></h2>
                <h3><%= event.start_time %></h3>
                <p><%= event.end_time %></p>
                <p><%= event.min_pax %></p>
                <p><%= event.max_pax %></p>
                <!--   <#%= link_to("#{event.start_time}  - #{event.end_time}", hobby_events_path(@hobby), class: "card-link") %> -->
                <%= link_to("Event details",hobby_event_path(@hobby, event), class: "btn btn-primary card-link") %>
                <%= link_to("Edit events",hobby_events_path(@hobby, @events), class: "btn btn-primary card-link") %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <% else %>
        <!-- remark that no events are created -->
        <div class="container text-center" style="margin-top: 100px">
         <h3 id="empty">No events scheduled yet</h3>
        </div>
      <% end %>
    </div>
  </div>
  <!-- event map -->
  <div>
    <div class="text-center" id="map" style=" width: 400px; height: 400px;"></div>
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }
          });
        });
      <% end %>
    <% end %>
    <div>
      <h3><%= @hobby.address %></h3>
    </div>
  </div>
</div>
