  <%= link_to root_path do %>
  <div>
      <span class="navbar-wagon-brand">Aibee</span>
  </div>

  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div>
      <%= link_to dashboard_host_path do %>
        <div class="navbar-about">
          <span>Host</span>
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to dashboard_guest_path do %>
        <div class="navbar-about">
          <span>Guest</span>
        </div>
      <% end %>
