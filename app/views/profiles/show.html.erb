
<div class="container text-center">
 <div class="row">
  <div class="col-xs-12 col-sm-12">
    <h1 class: "title"> <h1>  </h1>
    <%= cl_image_tag @user.photo.path, width: 100, height: 100, crop: :fill, class: "img-circle profile_picture"%>
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
  </div>
  <div class="col-xs-12 col-sm-12 specififications">
    <p> Gender: <%= @user.gender %> </p>
    <p> Bithdate: <%= @user.birthdate %></p>
  </div>
  <div class="col-xs-12 col-sm-12">
    <ul class="list-inline">
    	<li><a><i class="fa fa-phone" aria-hidden="true"></i></a></li> <%= @user.phone_number %>
    	<li><a><i class="fa fa-at" aria-hidden="true"></i></a></li> <%= @user.email %>
      <li><a><i class="fa fa-weixin" aria-hidden="true"></i></a></li> <%= @user.wechat_id %>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-12">
		<h3 class="section-title">
      <div class="section-title-content">BIO</div>
    </h3>
  </div>
  <div class="col-xs-12 col-sm-12">
    <p> <%= @user.bio %> </p>
  </div>
 </div>
</div>

